{
  "name": "energy_savers",
  "version": "1.0.0",
  "description": "Energy saver website",
  "main": "index.js",
  "scripts": {
    "build:css":
      "sass frontend/styles/main.scss app/static/build/styles.css --style=\"compressed\"",
    "watch:css":
      "sass frontend/styles/main.scss app/static/build/styles.css --watch --no-stop-on-error",
    "build:js":
      "parcel build frontend/scripts/index.js --out-dir app/static/build",
    "watch:js":
      "parcel watch frontend/scripts/index.js --out-dir app/static/build",
    "build": "npm run build:css & npm run build:js",
    "watch": "npm run watch:js & npm run watch:css",
    "clean": "rimraf app/static/build"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "parcel": "^1.11.0",
    "rimraf": "^2.6.3",
    "sass": "^1.17.0"
  }
}
